{
    "apps": {
        "http": {
            "servers": {
                "myserver": {
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/users"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "subroute",
                                    "routes": [
                                        {
                                            "handle": [
                                                {
                                                    "handler": "file_server",
                                                    "hide": [
                                                        "Caddyfile"
                                                    ],
                                                    "browse": {
                                                        "template_file": "file.html"
                                                    }
                                                },
                                                {
                                                    "handler": "json_parse",
                                                    "strict": false
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                "another": {
                    "automatic_https": {
                        "disable": true
                    },
                    "listen": [
                        ":8080"
                    ],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "json_parse",
                                    "strict": true
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "exec": {
            "commands": [
                {
                    "command": "echo",
                    "args": [
                        "Hello world"
                    ],
                    "foreground": true
                }
            ]
        }
    }
}